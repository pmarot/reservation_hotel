<!-- ajout de la partie head de la structure -->
<% include head.ejs %>

    <body>
        <!-- ajout de la partie menu et de la barre de recherche de la structure -->
        <% include header.ejs %>
            <!-- Création du tableau des hotels -->
            <div class="text-center m-5">
                <!--data-target="#insertUser"-->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#insertReservation">Ajout reservation</button>
            </div>
            <table class="table w-75 mt-5 text-center">
                <thead>
                    <tr>
                        <th scope="col">Id reservation</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Date arrivé</th>
                        <th scope="col">Date depart</th>
                        <th scope="col">Id hotel</th>
                        <th scope="col">Modifier</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Boucle d'ajout des hotels -->
                    <% reservations.forEach(function(element){ %>
                        <tr>
                            <td class="text-center">
                                <%= element._id %>
                            </td>
                            <td class="text-center">
                                <%= element.nom %>
                            </td>
                            <td class="text-center">
                                <%= element.date_debut %>
                            </td>
                            <td class="text-center">
                                <%= element.date_fin %>
                            </td>
                            <th class="text-center" scope="row">
                                <%= element.id_hotel %>
                            </th>
                            
                           

                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <!-- ajout de la partie footer de la structure -->
            <% include footer.ejs %>
    </body>