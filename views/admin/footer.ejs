<!-- modal pour INSERT HOTEL-->
<div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="insertModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="insertModalLabel">Ajout d'un hotel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="">
                    <div class="form-group">
                        <label for="id-hotel">Id</label>
                        <input type="number" class="form-control" id="insert-id-h" name="id-hotel" value="">
                    </div>
                    <div class="form-group">
                        <label for="name-hotel">Nom de l'hôtel</label>
                        <input type="text" class="form-control" id="insert-name-hotel" name="name-hotel" value="" placeholder="Bakoya Hotel Resort & Spa">
                    </div>
                    <div class="form-group">
                        <label for="img-hotel">Image</label>
                        <input type="text" class="form-control" id="insert-img-hotel" name="img-hotel" value="">
                    </div>
                    <div class="form-group">
                        <label for="mark-hotel">Luxiosité de l'hôtel (en etoiles)</label>
                        <input type="number" class="form-control" id="insert-mark-h" name="mark-hotel" value="" placeholder="4 / 5+">
                    </div>
                    <div class="form-group">
                        <label for="secteur-hotel">Id secteur</label>
                        <select class="form-control" id="insert-secteur-hotel">
                            <option value="0">Nord</option>
                            <option value="1">Sud</option>
                            <option value="2">Est</option>
                            <option value="3">Ouest</option>
                        </select>
                    </div>
                </form>
                <span id='insert_message'></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="ajouter">Ajouter</button>
                <button type="button" class="btn btn-danger" type="reset" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>
