<script>
    $('#updateModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var id = button.data('id') // Extract info from data-* attributes
        var name = button.data('name') // Extract info from data-* attributes
        var img = button.data('img') // Extract info from data-* attributes
        var etoiles = button.data('etoiles') // Extract info from data-* attributes
        var id_secteur = button.data('secteur') // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)
        modal.find('.modal-title').text('Mise à jour des données de : ' + name)
        modal.find('.modal-body #id-h').val(id);
        modal.find('.modal-body #name-hotel').val(name);
        modal.find('.modal-body #img-hotel').val(img);
        modal.find('.modal-body #mark-h').val(etoiles);
        modal.find('.modal-body #secteur-hotel').attr("value", id_secteur);
    })
</script>
