<!-- ajout de la partie head de la structure -->
<% include head.ejs %>
<body>
    <!-- ajout de la partie menu et de la barre de recherche de la structure -->
    <% include header.ejs %>
    <!-- CrÃ©ation du tableau des hotels -->
    <div class="text-center m-5">    
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#insertModal">Add hotel</button>
    </div>
   <table class="table w-75 mt-5 text-center">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">id</th>
        <th scope="col">Images</th>
        <th scope="col">Rank</th>
        <th scope="col">Modifier</th>
        <th scope="col">Supprimer</th>
      </tr>
    </thead>
    <tbody>
    <!-- Boucle d'ajout des hotels -->
        <% hotels.forEach(function(hotel){ %>
            <tr>
                <th class="text-left" scope="row"><%= hotel.id %></th>
                <td class="text-left"><%= hotel.Nom %></td>
                <td class="text-left"><%= hotel.img %></td>
                <td class="text-center"><%= hotel.Nb_etoiles %></td>
                <td><a data-toggle="modal" data-target="#updateModal" data-objid="<%= hotel._id %>" data-id="<%= hotel.id %>" data-name="<%= hotel.Nom %>" data-img="<%= hotel.img%>"  data-etoiles="<%= hotel.Nb_etoiles%>"  data-secteur="<%= hotel.id_secteur%>"><i class="far fa-edit"></i></a></td>
                <td><a class="delete" data-objid="<%= hotel._id %>"><i class="far fa-trash-alt"></i></a></td>
            </tr>
        <% }); %>
    </tbody>
  </table>
<!-- ajout de la partie footer de la structure -->
    <% include footer.ejs %>
</body>